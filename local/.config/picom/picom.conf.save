# Habilitar el compositor
backend = "glx";
vsync = true;

# Habilitar transparencias
fading = true;
fade-in-step = 0.03;
fade-out-step = 0.03;
fade-delta = 4;

# Mantener opacidad estÃ¡ndar para ventanas en general
inactive-opacity = 1.0;  # Sin transparencia para ventanas inactivas
active-opacity = 1.0;    # Sin transparencia para ventanas activas

# Desactivar sombras en terminales (opcional)
shadow-exclude = [
    "class_g = 'Alacritty'"
];

# Excluir sombras para ventanas fullscreen
shadow-exclude = [
    "fullscreen"
];

# Habilitar la transparencia solo para la terminal Alacritty
opacity-rule = [
    "95:class_g = 'Alacritty'"  # Aplicar 90% de opacidad solo a Alacritty
];


